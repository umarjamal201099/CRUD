@page
@model CRUD.Pages.Master.IndexModel

@{
    ViewData["Title"] = "Task List";
}

@* Bootstrap 5 + Custom Styles for Modern Look *@

<h1 class="text-center text-primary mb-4">Task Management</h1>

<div class="container">
    <div class="row justify-content-between">
        <div class="col-auto">
            <a asp-page="Create" class="btn btn-success btn-lg mb-4">
                <i class="fas fa-plus-circle"></i> Create New Task
            </a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Task Title</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TaskItem)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* JavaScript for Icons (Font Awesome CDN) *@
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
}
