@page
@model CRUD.Pages.Master.DeleteModel

@{
    ViewData["Title"] = "Delete Task";
}

@* Bootstrap 5 + Custom Styles for Modern Look *@

<h1 class="text-center text-danger mb-4">Delete Task</h1>

<h4 class="text-center text-warning">Are you sure you want to delete this task?</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-center">Task Details</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Task Title</dt>
                        <dd class="col-sm-9">@Model.TaskItem.Title</dd>
                    </dl>
                    <form method="post">
                        @* Hidden field for the task ID *@
                        <input type="hidden" asp-for="TaskItem.Id" />

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                            <a asp-page="./Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* Validation Scripts *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
