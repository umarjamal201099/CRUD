@page
@model CRUD.Pages.Master.CreateModel

@{
    ViewData["Title"] = "Create Task";
}

@* Bootstrap 5 + Custom Styles for Modern Look *@

<h1 class="text-center text-primary mb-4">Create Task</h1>

<h4 class="text-center mb-4">Add a new Task</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                @* Validation Summary *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="TaskItem.Title" class="form-label"></label>
                    <input asp-for="TaskItem.Title" class="form-control form-control-lg" placeholder="Enter task title" />
                    <span asp-validation-for="TaskItem.Title" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Create Task" class="btn btn-success btn-lg px-4" />
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-page="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@* JavaScript for Validation *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

