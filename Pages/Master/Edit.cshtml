@page
@model CRUD.Pages.Master.EditModel

@{
    ViewData["Title"] = "Edit Task";
}

@* Bootstrap 5 + Custom Styles for Modern Look *@

<h1 class="text-center text-primary mb-4">Edit Task</h1>

<h4 class="text-center mb-4">Update Task Details</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        @* Validation Summary *@
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="TaskItem.Id" />

                        <div class="form-group mb-4">
                            <label asp-for="TaskItem.Title" class="form-label"></label>
                            <input asp-for="TaskItem.Title" class="form-control form-control-lg" placeholder="Enter task title" />
                            <span asp-validation-for="TaskItem.Title" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success btn-lg">Save</button>
                            <a asp-page="./Index" class="btn btn-outline-primary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* JavaScript for Validation *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
